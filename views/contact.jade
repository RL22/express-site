extends layout

block content
	.container
		.row
			.panel
			.col-lg-4.col-sm-12
			.col-lg-4.col-sm-12
				form(method='post', action='contact/send')
				h1 Contact
				.form-group
					label Name
					input.form-control(type='text',name='name', placeholder='Enter Name')
				.form-group
					label Email
					input.form-control(type='text',email='email', placeholder='Enter email')
				.form-group
					label Message
					input.form-control(type='text',message='message', placeholder='Enter message')
				button.btn.btn-default(type='submit') Submit